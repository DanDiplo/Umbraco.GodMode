<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ContentTargetFolders>.</ContentTargetFolders>
    <PackageId>Diplo.GodMode</PackageId>
    <Title>Diplo.GodMode</Title>
    <Version>10.0.0</Version>
    <Description>Diplo God Mode makes Umbraco developers invincible!</Description>
    <Product>Diplo GodMode</Product>
    <PackageTags>umbraco plugin package developer-tool</PackageTags>
    <RootNamespace>Diplo.GodMode</RootNamespace>
    <Copyright>Dan 'Diplo' Booth</Copyright>
    <PackageProjectUrl>https://www.diplo.co.uk/blog/web-development/god-mode-comes-to-umbraco-9/</PackageProjectUrl>
    <PackageIcon>GodModeIcon.png</PackageIcon>
    <RepositoryUrl>https://github.com/DanDiplo/Umbraco.GodMode/tree/v10</RepositoryUrl>
    <Authors>DanDiplo</Authors>
    <PackageReleaseNotes>Umbraco 10 support</PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>NuGet.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="App_Plugins\DiploGodMode\**\*.*">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <None Include="build\**\*.*">
      <Pack>True</Pack>
      <PackagePath>buildTransitive</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="App_Plugins\DiploGodMode\backoffice\godModeTree\tagBrowser.html" />
    <None Remove="App_Plugins\DiploGodMode\backoffice\Scripts\GodMode.TagBrowser.Controller.js" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Screenshots\Icon\GodModeIcon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="NuGet.md">
      <Pack>True</Pack>
    </None>
  </ItemGroup>
</Project>
